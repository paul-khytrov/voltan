@font-face 
{
  font-family: titleFont;
  src: url(CormorantInfant-LightItalic.ttf);
}
@font-face 
{
  font-family: discFont;
  src: url(CormorantInfant-Light.ttf);
}

@media(orientation:landscape)
{

html{height:100%;}
body
{
	top:0;
	left:0;
	min-height: 100%;
	margin:0;
	background-image:url("backdrop.jpg");
	background-repeat: no-repeat;
	background-size:cover;
	position:relative;
}
.blackout
{
	top:0;
	left:0;
	opacity:1;
	position:absolute;
	z-index:5;
	background-color:black;
	width: 100%; height: 100%;
	transition: opacity 3s ease-out;

}

.blackout.end
{
	opacity: 0;
}
.frontdrop
{
	position:absolute;
	top:0;
	left:0;
	margin:0;
	background-color:rgba(0, 0, 0, 0.5);
	width:40%;
	height:100vh;
}
.main-title
{
	font-family:titleFont;
	font-size:66px;
	text-align:center;
	color:#DADADA;
}
.button
{
	display:block;
	margin-top:40%;
	
}	
.but
{
	font-size:62px;
	color:#9e9e9e;
	text-align:center;
}
.but:hover
{
	font-size:63px;
	color:#D1D1D1;
	text-align:center;
}
#disc
{
	opacity:0;
	z-index:10;
	position:absolute;
	margin-left:65%;
	margin-top:17%;
	max-width:30%;
	font-size:37px;
	font-family:discFont;
	text-align:center;
	animation-name: fadein;
	animation-duration: 5s;
	color:rgb(255, 255, 255);	
	
}

@keyframes fadein
{
	100%{opacity:1;}
}

}

@media(orientation:portrait)
{
    html
    {
        height:100%;
    }
    body
    {
        top:0;
	left:0;
    	min-height: 100%;
    	margin:0;
    	background-image:url("backdrop.jpg");
    	background-repeat: no-repeat;
    	background-size: 400%;
    	position:relative;
    }
    .main-title
    {
	    font-family:titleFont;
    	font-size:8vh;
    	text-align:center;
    	color:#DADADA;
    }
    .frontdrop
    {
	position:absolute;
	top:0;
        left:0;
    	margin:0;
    	background-color:rgba(0, 0, 0, 0.5);
    	width:100%;
    	height:100vh;
    }
    .button
    {
	    display:block;
	    margin-top:30%;
	}
    .but
    {
	    font-size:5.5vh;
	    color:#9e9e9e;
	    text-align:center;
    }
    .disc
    {
	    opacity:1;
	    z-index:10;
            display:block;
	    position:absolute;
	    margin-left:10%;
	    margin-right:10%;
	    margin-top:70%;
	    max-width:80%;
	    font-size:2.5vh;
	    font-family:discFont;
	    text-align:center;
            transition: opacity 6s ease-out;
	    color:rgb(255, 255, 255);

    }
    .disc.end
    {
          opacity:0;  
    }
    .blackout
    {
	top:0;
	left:0;
	opacity:1;
	position:fixed ;
	z-index:5;
	background-color:black;
	width: 100%; height: 100%;
	transition: opacity 3s ease-out;

     }

